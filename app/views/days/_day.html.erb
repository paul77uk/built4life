<%= turbo_frame_tag day do %>
  <div class="flex justify-between border shadow-md mb-4 py-3 px-5 items-center rounded-lg">
    <h1 class="text-red-700 text-lg font-medium hover:text-red-600"><%= link_to day.title, workout_day_path(workout, day), data: { turbo_frame: "_top" } %></h1>
    <div class="flex gap-2">
      <%= button_to [workout, day], method: :delete,  data: { turbo_confirm: "Are you sure?" }, id: 'delete_day', class: "bg-gray-200 py-2 px-3 rounded-md hover:bg-gray-300" do %>
        <i class="fa-regular fa-trash-can fa-xl"></i>
      <% end %>
      <%= link_to [:edit, workout, day], id: 'edit_day', class: "bg-gray-200 py-2 px-3 rounded-md hover:bg-gray-300" do %>
        <i class="fa-regular fa-pen-to-square fa-xl"></i>
      <% end %>
    </div>
  </div>
<% end %>
